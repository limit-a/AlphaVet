<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.mapper.VaccineDetailMapper">

	<select resultType="int" parameterType="int" id="selectDay">
		SELECT VD_DAY FROM VACCINE_DETAIL
		WHERE VD_NM=#{vdNm}
	</select>

	<select resultType="VaccineDetailVO" id="selectVaccineList">
		<![CDATA[
			SELECT * FROM VACCINE_DETAIL
			ORDER BY VD_NAME
		]]>
	</select>
	
	<select resultType="VaccineDetailVO" parameterType="int" id="selectVaccineByVdNm">
		SELECT * FROM VACCINE_DETAIL
		WHERE VD_NM=#{vdNm}
	</select>

</mapper>